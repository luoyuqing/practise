<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#d5d5d5" >

    <LinearLayout
        android:id="@+id/text_log_list_new"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/log_list_userimg"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_marginTop="3dp"
                android:src="@drawable/pic_log_unit" >
            </ImageView>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dip"
                android:layout_marginTop="5dip"
                android:layout_toRightOf="@+id/log_list_userimg"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/log_list_tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="我的名字"
                    android:textColor="#171717" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/log_list_tv_nickname"
                    android:layout_marginTop="5dip" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dip"
                        android:background="@drawable/ic_location" />

                    <TextView
                        android:id="@+id/log_list_tv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dip"
                        android:layout_marginRight="2dip"
                        android:text="四川成都"
                        android:textColor="#878787"
                        android:textSize="12dip" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/log_list_lltime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" >

                    <ImageView
                        android:id="@+id/log_list_iv_clock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_blog_clock" />

                    <TextView
                        android:id="@+id/log_list_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="2h"
                        android:textColor="#636363"
                        android:textSize="12dp" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dip"
            android:background="#ffffff"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dip"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/log_list_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_blog_log_more"
                        android:visibility="gone" >
                    </ImageView>
                </LinearLayout>

                <TextView
                    android:id="@+id/log_list_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="5dip"
                    android:text="今天吃羊肉火锅"
                    android:textColor="#3d3d3d"
                    android:textSize="16dip"
                    android:visibility="gone" />
            </RelativeLayout>

            <ProgressBar
                android:id="@+id/log_list_pb_contentpic"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dip"
                android:visibility="gone" />

            <Gallery
                android:id="@+id/log_list_contentpic"
                android:layout_width="fill_parent"
                android:layout_height="300dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dip"
                android:spacing="8dp" />

            <TextView
                android:id="@+id/log_list_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:layout_marginTop="8dip"
                android:text="今年的冬天特别，所以要主要保暖，在这个很寒冷的冬天，我们的心情都是那样的很安静"
                android:textColor="#575757"
                android:textSize="12.5sp"
                android:visibility="visible" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.3dip"
                android:layout_marginTop="5dip"
                android:background="#a9adae" />

            <!--
                 <View
                android:id="@+id/log_list_v_withlinetop"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#aeaeae" />
            -->

            <LinearLayout
                android:id="@+id/log_list_llt_person"
                android:layout_width="fill_parent"
                android:layout_height="66dp"
                android:layout_marginTop="5dp"
                android:background="#FFFFFF" >

                <TextView
                    android:id="@+id/log_list_tv_partperson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dip"
                    android:text="With:"
                    android:textColor="#505050"
                    android:textStyle="bold" />

                <!--
                     <com.chance.teststh.GalleryView
					android:id="@+id/log_list_part_person"
					android:layout_width="250dp"
					android:layout_height="60dp"
					android:layout_gravity="center_vertical"
					android:layout_marginLeft="3dp"
					android:gravity="center_vertical"
					android:scrollbars="none"
					android:spacing="1dp" />
                -->

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/testphoto" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/testphoto" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/testphoto" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/testphoto" />

              

               

                

                <ImageView
                    android:id="@+id/blog_edit_iv_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/btn_blog_with_more" />
                <!-- 先把with more这个图片隐藏如果有with的人在出现 需要程序控制 -->
            </LinearLayout>

            <!--
                 <View
                android:id="@+id/log_list_v_withlinebottom"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#aeaeae" />
            -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_blog_log_praise" />

                <TextView
                    android:id="@+id/log_list_parisenum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:text="3330赞"
                    android:textColor="#516679" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginTop="4dip"
                android:orientation="vertical" >

                <!-- 显示评论内容,评论模板为listview_log_replay.xml -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dip"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/ic_blog_log_comment" />
                    <ListView
						android:id="@+id/log_list_replay"
						android:layout_width="wrap_content"
						android:layout_height="55dp"
						android:divider="#ffffff"
						android:cacheColorHint="#ffffff"
						android:layout_marginLeft="5dip"
						android:fadingEdge="none" >
					</ListView>

                    <LinearLayout
                        android:id="@+id/log_ll_replay"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:visibility="gone"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dip"
                                android:text="小帮"
                                android:textColor="#516679" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dip"
                                android:text="斯蒂芬金黄色卡迪夫哈市地方经济" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dip"
                                android:text="小欢"
                                android:textColor="#516679" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dip"
                                android:text="共和国激光焊接法国恢复规划" />
                        </LinearLayout>
                        
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/log_list_more_replay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="4dip"
                    android:text="查看所有300则回应"
                    android:textSize="13sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dip"
                android:layout_marginTop="4dip" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dip"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/log_list_llt_parise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/log_list_parise"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:background="@drawable/praise_btn_log" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dip"
                            android:text="+赞"
                            android:textColor="#6a6a6a"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/log_list_llt_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/comment_btn_log" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dip"
                            android:text="+评论"
                            android:textColor="#6a6a6a"
                            android:textSize="11sp" />
                    </LinearLayout>
                    <!--
     <LinearLayout
					android:id="@+id/log_list_llt_share"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dip"
					android:orientation="horizontal" >

					<ImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/share_btn_log" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_vertical"
						android:layout_marginLeft="5dip"
						android:text="+分享"
						android:textColor="#6a6a6a"
						android:textSize="11sp" />
				</LinearLayout>
                    -->

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:orientation="horizontal" >
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/blog_log_btn_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dip"
                    android:src="@drawable/more_btn_log" />
            </RelativeLayout>
           <!--  <View
            android:layout_width="wrap_content"
            android:layout_height="0.3dip"
            android:layout_marginTop="5dip"
            android:background="#a9adae" /> -->
        </LinearLayout>
        <!-- 新加的载入日志等待条 -->

        <LinearLayout
            android:id="@+id/footer_log_ls_loadwait"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center_horizontal|center_vertical"
            android:visibility="gone" >

            <ProgressBar
                android:id="@+id/progressBar_log_loadlog"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/footer_log_tv_load"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/footer_log_tv_load" />
        </LinearLayout>

        
    </LinearLayout>

</LinearLayout>